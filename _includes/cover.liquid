<div class="b-banner">
	{% if page.cover_image %}
	<img src="{{site.baseurl}}/img/{{page.cover_image}}" alt="" class="b-banner__img">
	{% endif %}
	<div class="b-banner__content">
		<div class="b-intro">
			<h1 class="b-intro__title">{{page.title}}</h1>
			{% if page.description %}
			<div class="b-intro__content">{{page.description}}</div>
			{% endif %}
		</div>
	</div>
</div>