<div class="b-slider">
	<div id="jsSlider" class="b-slider__inner">
		{% for slide in site.data.slideshow.slides %}
		<div class="b-slider__item jsSliderItem"
			style="background-image: url({{slide.image | prepend: 'img/' | prepend: site.baseurl}})" 
		>
			<div class="b-slider-content  {% if slide.image_type == 'dark' %} is-dark {% else %} is-light {% endif %}">
				{% comment %}<img src="" alt="" class="b-slider-content__img">{% endcomment %}
				<div class="b-slider-content__content">
					<h2 class="b-slider-content__title">{{slide.title}}</h2>
					<div class="b-slider-content__subtitle">
						<span class="b-slider-content__subtitle-text">{{slide.subtitle}}</span>
					</div>
					<a href="{{slide.action_url}}" class="b-slider-content__action button">
						<span class="button__text">{{slide.action_text}}</span>
						<span class="button__icon">â†’</span>
					</a>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
